class A2 {
	// XPECT noerrors -->
	public constructor(p: string) {}
}

@CovariantConstructor
class B2 extends A2 {
	// NOTE: the class that first introduces @CovariantConstructor is allowed to change the signature, reduce the visibility, etc.!
	// XPECT noerrors -->
	constructor(p: number) { super(""); }
}

// XPECT noerrors -->
class C2 extends B2 {
}

// XPECT noerrors -->
class D2 extends C2 {
}
class D2_ctor extends C2 {
	// XPECT noerrors -->
	constructor(p: number) { super(42); }
}
class D2_ctor_bad1 extends C2 {
	// XPECT errors --> "The constructor D2_ctor_bad1.constructor cannot reduce the visibility of constructor B2.constructor." at "constructor"
	private constructor(p: number) { super(42); }
}
class D2_ctor_bad2 extends C2 {
	// XPECT errors --> "Signature of constructor D2_ctor_bad2.constructor does not conform to overridden constructor B2.constructor: {function(X)} is not a subtype of {function(number)}." at "constructor"
	constructor(p: X) { super(42); }
}


