<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="eu.numberfour.n4js.runner.chrome.ui.RunnerChromeUiExecutableExtensionFactory:eu.numberfour.n4js.runner.chrome.ui.ChromeLaunchConfigurationDelegate"
            delegateDescription="Runs given selection with Chrome runner"
            delegateName="Chrome Runner Launch Configuration Delegate"
            id="eu.numberfour.n4js.runner.chrome.ui.launchConfigurationType"
            modes="run"
            name="Chrome Runner">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="eu.numberfour.n4js.runner.chrome.ui.RunnerChromeUiExecutableExtensionFactory:eu.numberfour.n4js.runner.ui.RunnerLaunchConfigurationTabGroup"
            id="eu.numberfour.n4js.runner.chrome.ui.launchConfigurationTabGroup"
            type="eu.numberfour.n4js.runner.chrome.ui.launchConfigurationType">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="eu.numberfour.n4js.runner.chrome.ui.RunnerChromeUiExecutableExtensionFactory:eu.numberfour.n4js.runner.chrome.ui.ChromeRunnerLaunchShortcut"
            icon="icons/icon_runner_chrome.png"
            id="eu.numberfour.n4js.runner.chrome.ui.LaunchShortcut"
            label="Launch in Chrome"
            modes="run">
         <configurationType
               id="eu.numberfour.n4js.runner.chrome.ui.launchConfigurationType">
         </configurationType>
         <contextualLaunch>
                       <enablement>   
                 <with   
                       variable= "selection" >   
                    <count   
                          value= "1" >   
                    </count>   
                    <iterate>   
                       <or>   
                          <test   
                                property= "org.eclipse.debug.ui.matchesPattern"   
                                value= "*.js" >   
                          </test>   
                          <test   
                                property= "org.eclipse.debug.ui.matchesPattern"   
                                value= "*.n4js" >   
                          </test>   
                       </or>
                       <and>
                          <test
                                args="eu.numberfour.n4js.runner.chrome.CHROME"
                                property="eu.numberfour.n4js.runner.ui.isSupportingRunner">
                          </test>
                       </and>   
                    </iterate>   
                 </with>   
              </enablement>   </contextualLaunch>
      </shortcut>
   </extension>
 
</plugin>
